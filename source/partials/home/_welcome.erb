<%# Home > Welcome %>
<section class="s-home-welcome" id="welcome" poster="<%= image_path 'backgrounds/blog-bg.jpg' %>">

  <%# Video %>
  <video autoplay loop muted="muted" preload="auto" id="welcome-video"
          poster="<%= image_path 'backgrounds/smartphone.jpg' %>"
          style="display:none;">
    <source src="/videos/smartphone.300.mp4" type="video/mp4">
    <source src="/videos/smartphone.300.webm" type="video/webm">
    <source src="/videos/smartphone.300.ogv" type="video/ogg">
  </video>

  <div class="s-home-welcome__content">
    <div class="l-constrained-large">

      <%# Copy %>
      <header class="will-animate fadeIn">
        <h1><strong>iamlos.</strong> is a direct response marketing and web development studio that excels in helping businesses better connect with their audience.</h1>
      </header>

      <%# Call to action %>
      <div class="s-home-welcome__cta">
        <%= component "cta-button", btn: "btn-bright", id: "cta-welcome" %>
      </div>

    </div>
  </div>

</section>
